{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist/server",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/server/**/*", "src/config/**/*", "src/models/**/*", "src/controllers/**/*", "src/routes/**/*", "src/services/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
} 